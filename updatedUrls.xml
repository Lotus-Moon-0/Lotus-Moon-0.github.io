layout: null
---
{% if site.bing.enable %}POST /webmaster/api.svc/pox/SubmitUrlBatch?apikey={{ site.bing.APIkey }} HTTP/1.1
Content-Type: application/xml; charset=utf-8
Host: ssl.bing.com

<?xml version="1.0" encoding="UTF-8"?>
<SubmitUrlBatch xmlns="http://schemas.datacontract.org/2004/07/Microsoft.Bing.Webmaster.Api">
<siteUrl>{{ site.url }}</siteUrl>
<urlList>{% for post in site.posts %}{% if post.modify_day == site.modify_time %}
<string xmlns="http://schemas.microsoft.com/2003/10/Serialization/Arrays">{{ site.url }}{{ post.url }}</string>
{% endif %}{% endfor %}<urlList>
</SubmitUrlBatch>{% endif %}